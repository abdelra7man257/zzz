<!-- res/layout/dialog_add_blog.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Blog"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- EditText for entering blog text -->
    <EditText
        android:id="@+id/editTextBlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your blog text"
        android:layout_below="@id/dialogTitleTextView"
        android:layout_marginBottom="16dp"/>

    <!-- Button for adding image from Gallery -->
    <Button
        android:id="@+id/buttonAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image from Gallery"
        android:layout_below="@id/editTextBlog"
        android:layout_marginTop="8dp"/>

    <!-- Button for submitting the blog -->
    <Button
        android:id="@+id/buttonSubmitBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Blog"
        android:layout_below="@id/buttonAddImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
